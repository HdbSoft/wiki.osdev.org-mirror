			<h1 id="firstHeading" class="firstHeading">Bochs VBE Extensions</h1>
			<!-- /firstHeading -->
			<!-- bodyContent -->
			<div id="bodyContent">
								<!-- tagline -->
				<div id="siteSub">From OSDev Wiki</div>
				<!-- /tagline -->
								<!-- subtitle -->
				<div id="contentSub">(Redirected from <a href="http://wiki.osdev.org/index.php?title=Bochs_Graphics_Adaptor&amp;redirect=no" title="Bochs Graphics Adaptor">Bochs Graphics Adaptor</a>)</div>
				<!-- /subtitle -->
																<!-- jumpto -->
				<div id="jump-to-nav">
					Jump to: <a href="Bochs_Graphics_Adaptor#mw-head">navigation</a>,
